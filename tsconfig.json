{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "allowJs": false,
        "module": "esnext",
        "jsx": "react",
        "target": "es6",
        "lib": [
          "dom",
          "dom.iterable",
          "es6",
          "es7",
          "esnext"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "sourceMap": true
    },
    "include": [
        "src"
    ]
}
